struct TestStruct {
    string field;
    string field_1;
}

// special function which will set the metatable of TestStruct
pub fn TestStruct:new(string field) -> TestStruct {
    self.field = field
}

pub fn TestStruct:echo_field() -> string {
    self.field_1 = "This field was added through a method."
    return self.field
}

TestStruct item = TestStruct:new("Hello, world!")
print(item:echo_field(), item.field_1)
